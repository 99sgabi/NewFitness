@model IEnumerable<WebApplication.Models.KategoriaCwiczenia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nazwa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nazwa)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.id_kategorii">Details</a> <br />

                @if (item.id_kategorii != ViewBag.DefaultCategory.id_kategorii)
                {

                    <a asp-action="Delete" asp-route-id="@item.id_kategorii">Delete</a> <br />
                    <a asp-action="Edit" asp-route-id="@item.id_kategorii">Edit</a> <br />
                }

            </td>
        </tr>
}
    </tbody>
</table>
